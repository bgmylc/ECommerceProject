<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/userSecond_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="#FFFCFC"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/imageViewActionLogo2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/smallDistance"
                    android:layout_marginEnd="@dimen/smallDistance"
                    android:tint="@color/primaryDarkColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/icon_arrow_right" />

                <TextView
                    android:id="@+id/textViewUserActionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/edgeDistance"
                    android:layout_marginTop="@dimen/smallDistance"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/textColor2"
                    android:textSize="@dimen/buttonTextDimen"
                    app:layout_constraintStart_toEndOf="@+id/imageViewUserAction"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Action Name" />

                <ImageView
                    android:id="@+id/imageViewUserAction"
                    android:layout_width="@dimen/smallIconDimen"
                    android:layout_height="@dimen/smallIconDimen"
                    android:layout_marginStart="@dimen/smallDistance"
                    android:layout_marginTop="@dimen/smallDistance"
                    app:layout_constraintEnd_toStartOf="@+id/textViewUserActionName"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
